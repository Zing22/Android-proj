html
  head
    meta(charset='utf-8')
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/ui.css')
    link(rel='stylesheet', href='/stylesheets/sweetalert2.min.css')
    link(rel='stylesheet', href='/stylesheets/index.css')
  body
    #window
        //- settings
    .settings-box
        .settings-title
            span 设置
            .nothing.icons
            .close.icons
