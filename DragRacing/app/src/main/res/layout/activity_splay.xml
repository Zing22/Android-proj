<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dragracing.dragracing.SPlayActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:id="@+id/layout_airs_splay"
            android:background="@drawable/game_board">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dice1"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:id="@+id/imageButton_dice" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dice1"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:id="@+id/image_dice" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/paperplane"
                android:scaleX="@string/image_air_scaleX"
                android:scaleY="@string/image_air_scaleY"
                android:id="@+id/air_1_1_splay"
                android:visibility="visible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/paperplane"
                android:scaleX="@string/image_air_scaleX"
                android:scaleY="@string/image_air_scaleY"
                android:id="@+id/air_1_2_splay"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/paperplane"
                android:scaleX="@string/image_air_scaleX"
                android:scaleY="@string/image_air_scaleY"
                android:id="@+id/air_1_3_splay"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/paperplane"
                android:scaleX="@string/image_air_scaleX"
                android:scaleY="@string/image_air_scaleY"
                android:id="@+id/air_1_4_splay"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/paperplane"
                android:scaleX="@string/image_air_scaleX"
                android:scaleY="@string/image_air_scaleY"
                android:id="@+id/air_2_1_splay"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/paperplane"
                android:scaleX="@string/image_air_scaleX"
                android:scaleY="@string/image_air_scaleY"
                android:id="@+id/air_2_2_splay"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/paperplane"
                android:scaleX="@string/image_air_scaleX"
                android:scaleY="@string/image_air_scaleY"
                android:id="@+id/air_2_3_splay"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/paperplane"
                android:scaleX="@string/image_air_scaleX"
                android:scaleY="@string/image_air_scaleY"
                android:id="@+id/air_2_4_splay"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/paperplane"
                android:scaleX="@string/image_air_scaleX"
                android:scaleY="@string/image_air_scaleY"
                android:id="@+id/air_3_1_splay"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/paperplane"
                android:scaleX="@string/image_air_scaleX"
                android:scaleY="@string/image_air_scaleY"
                android:id="@+id/air_3_2_splay"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/paperplane"
                android:scaleX="@string/image_air_scaleX"
                android:scaleY="@string/image_air_scaleY"
                android:id="@+id/air_3_3_splay"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/paperplane"
                android:scaleX="@string/image_air_scaleX"
                android:scaleY="@string/image_air_scaleY"
                android:id="@+id/air_3_4_splay"
                android:visibility="invisible"/>

