                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/paperplane"
                android:scaleX="@string/image_air_scaleX"
                android:scaleY="@string/image_air_scaleY"
                android:id="@+id/air_4_2_splay"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/paperplane"
                android:scaleX="@string/image_air_scaleX"
                android:scaleY="@string/image_air_scaleY"
                android:id="@+id/air_4_3_splay"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/paperplane"
                android:scaleX="@string/image_air_scaleX"
                android:scaleY="@string/image_air_scaleY"
                android:id="@+id/air_4_4_splay"
                android:visibility="invisible"/>

            <!--com.cunoraz.gifview.library.GifView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:gif="@drawable/waiting"/-->

        </FrameLayout>

        <Button
            android:text="dice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:id="@+id/button_dice_splay"
            android:enabled="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <Button
                android:text="Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_air1_splay"
                android:layout_weight="1"
                android:enabled="false"/>

            <Button
                android:text="Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_air2_splay"
                android:layout_weight="1"
                android:enabled="false" />

